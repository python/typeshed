from hammurabi.rules.common import SinglePathRule as SinglePathRule
from pathlib import Path

class DirectoryExists(SinglePathRule):
    def task(self) -> Path: ...

class DirectoryNotExists(SinglePathRule):
    def post_task_hook(self) -> None: ...
    def task(self) -> Path: ...

class DirectoryEmptied(SinglePathRule):
    def task(self) -> Path: ...

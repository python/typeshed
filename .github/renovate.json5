{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  dependencyDashboard: true,
  suppressNotifications: [
    'prEditedNotification',
  ],
  extends: [
    'config:recommended',
  ],
  labels: [
    'bot: dependencies',
  ],
  semanticCommits: 'disabled',
  separateMajorMinor: false,
  prHourlyLimit: 10,
  'pre-commit': {
    enabled: true,
  },
  packageRules: [
    {
      groupName: 'GitHub Actions',
      matchManagers: [
        'github-actions',
      ],
      description: 'Quarterly update of GitHub Action dependencies',
      schedule: [
        'every 3 months on the first day of the month',
      ],
    },
    {
      groupName: 'Python versions',
      matchManagers: [
        'github-actions',
      ],
      matchPackageNames: [
        'python',
      ],
      description: 'Disable PRs updating Python versions',
      enabled: false,
    },
    {
      groupName: 'most test/lint dependencies',
      matchManagers: [
        'pip_requirements',
        'pre-commit',
      ],
      description: 'Quarterly update of most test dependencies',
      schedule: [
        'every 3 months on the first day of the month',
      ],
      matchPackageNames: [
        '!pytype',
        '!pyright',
      ],
    },
    {
      groupName: 'pytype and pyright',
      matchManagers: [
        'pip_requirements',
      ],
      matchPackageNames: [
        'pytype',
        'pyright',
      ],
      description: 'Daily update of pyright and pytype',
      schedule: [
        'before 4am',
      ],
    },
  ],
}
